<script>
  function selectOption(option) {
    var button = document.querySelector('.customer-welcome button');
    button.innerHTML = option;

    // Aumentar el font-weight del texto seleccionado
    var selectedOption = document.querySelector('.customer-welcome .dropdown-options .item.selected');
    if (selectedOption) {
      selectedOption.classList.remove('selected');
    }
    var newSelectedOption = document.querySelector('.customer-welcome .dropdown-options .item[data-option="' + option + '"]');
    newSelectedOption.classList.add('selected');
  }
</script>