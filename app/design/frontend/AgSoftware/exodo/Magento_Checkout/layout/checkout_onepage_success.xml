<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <referenceContainer name="content">

            <container name="success.wrapper" htmlTag="div" htmlClass="success__wrapper" before="-">

                <block name="image.success" template="Magento_Checkout::image-success.phtml"/>

            </container>

        </referenceContainer>

        <move element="page.main.title" destination="success.wrapper"  before="image.success"/>

    </body>
</page>
